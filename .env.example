# VeriClean Environment Configuration
# Copy this file to .env and fill in your values

# ================================
# Gemini AI (Required)
# ================================
VITE_GEMINI_API_KEY=your-gemini-api-key

# ================================
# ServiceNow Integration (Optional)
# ================================
# Leave empty to use mock mode for testing
SERVICENOW_INSTANCE=your-instance.service-now.com
SERVICENOW_USERNAME=api_user
SERVICENOW_PASSWORD=api_password

# ================================
# Jira Integration (Optional)
# ================================
# Leave empty to use mock mode for testing
JIRA_HOST=your-company.atlassian.net
JIRA_EMAIL=api@company.com
JIRA_API_TOKEN=your-api-token
JIRA_PROJECT_KEY=VERI

# ================================
# Firebase (if not using firebase init)
# ================================
# VITE_FIREBASE_API_KEY=
# VITE_FIREBASE_AUTH_DOMAIN=
# VITE_FIREBASE_PROJECT_ID=
# VITE_FIREBASE_STORAGE_BUCKET=
# VITE_FIREBASE_MESSAGING_SENDER_ID=
# VITE_FIREBASE_APP_ID=
